.author{
  flex 1
  display flex
  align-items: center;
  position: relative;
  margin-bottom 10px
  img{
    width 30px
    height 30px
    border-radius 50%
    border 1px solid blueviolet
    cursor pointer
  }
  .user{
    cursor pointer
    padding 0 12px
    color defaultColor
    .name{
      font-size 14px
      font-weight 900
      display block
    }
    .date{
      font-size 12px
      font-weight 600
    }
  }
}

.author-data{
  .row{
    margin-bottom 10px
  }
}