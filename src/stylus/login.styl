.login{
  display:grid;
  width 100vw
  height 100vh
  justify-content: center;
  align-items: center;
  .container{
    max-height 300px
    max-width 500px
    padding 10px 12px
    >*{
      display block
    }
    button{
      width 100%
      margin-top 15px
    }
    >span{
      button{
        text-transform: capitalize;
        font-size 15px
      }
    }
  }
}