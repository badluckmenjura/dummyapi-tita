header{
  width 100% 
  box-sizing: border-box;
  background white
  .line{
    width 100%
    height 5px
    background gradiendColor
  }
  .container{
    padding 10px 12px
    display flex
    align-items: center;
    .profile{
      justify-content: flex-end;
      flex 1
      display flex
      align-items: center;
      position: relative;
      img{
        width 40px
        height 40px
        border-radius 50%
      }
      .user{
        padding 0 12px
        color defaultColor
        .name{
          font-size 16px
          font-weight 900
          display block
        }
        .email{
          font-size 14px
          font-weight 600
        }
      }
      button{
        display none
        position: absolute;
        bottom: -28px;
        right: 90px;
        &::after{
          content:''
          border-bottom 5px solid lightseagreen
          border-left 5px solid transparent
          border-top 5px solid transparent
          border-right 5px solid transparent
          position absolute
          top: -10px;
          left: 50px;
        }
      }
      &:hover{
        button{
          display:inline-block
        }
      }
    }
    .logo{
      max-width 200px
    }
  }
}